# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model Settings
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Perplexity API (alternative/fallback)
# Get your API key from https://www.perplexity.ai/
PERPLEXITY_API_KEY=pplx-your-api-key-here

# Flask Configuration
FLASK_ENV=production
FLASK_PORT=5000
FLASK_DEBUG=False

# Database Configuration
DB_FOLDER=database
DB_FILE=database/steel_database.db

# Parsing Configuration
RETRY_COUNT=3
REQUEST_TIMEOUT=30
DELAY_BETWEEN_REQUESTS=1

# Feature Flags
ENABLE_AI_FALLBACK=True
ENABLE_WEB_SCRAPING=True
ENABLE_OCR=False
CACHE_AI_RESULTS=True

# AI Search Settings
AI_SEARCH_TIMEOUT=30
AI_CACHE_TTL=86400
MAX_AI_REQUESTS_PER_DAY=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/parsersteel.log

# Telegram Bot Configuration
# Get your bot token from @BotFather in Telegram
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot command
# 3. Follow instructions to create your bot
# 4. Copy the token you receive
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
